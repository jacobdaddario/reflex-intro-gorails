<%= form_with(model: todo, local: true) do |form| %>
  <% if todo.errors.any? %>
    <div class="border-red-500 bg-red-100 text-red-700 m-4">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-4">
    <%= form.label :description, class: "text-lg" %>
    <%= form.text_field :description, class: "h-8 my-2 form-input block" %>
  </div>

  <div class="flex">
    <%= form.submit class: "btn mr-2" %>
    <%= link_to 'Back', todos_path, class: "btn bg-gray-300 text-gray-900 ml-2 shadow-none hover:bg-gray-500" %>
  </div>
<% end %>
